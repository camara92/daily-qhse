{% extends 'base.html.twig' %}

{% block title %} Modification  - DAILY QHSE {{ experience.poste }} {% endblock %}

{% block body %}

    <section id="services" class="services section">

        <!-- Section Title -->
        <div class="container section-title" data-aos="fade-up">
            <h2>Tous les sujets</h2>
            <p>
                <span>Experiences</span>
                <span class="description-title">par secteur d'activité </span>
            </p>
        </div>
        <!-- End Section Title -->

        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-12 col-md-12" data-aos="fade-up" data-aos-delay="100">
                    
                    <h1>Modifier l'experience : {{ experience.poste }}</h1>

                    {{ form_start(form) }}
                    {{ form_row(form.poste ) }}
                    {{ form_row(form.entreprise  ) }}
                    {{ form_row(form.dateStarted | date("d/m/Y H:i") ) }}
                    {{ form_row(form.description) }}
                    {{ form_row(form.service) }}
                    {{ form_row(form.secteur) }}
                    {{ form_row(form.photo) }}
                    
                    
                    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                    {{ form_end(form) }}
                </div>
                
                <h3 class="text-center">Créer un <a href="{{ path('add_exp') }}">Nouvel experience</a></h3>
            </div>
        </div>

    </section>

{% endblock %}
