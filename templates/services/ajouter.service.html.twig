{% extends 'base.html.twig' %}

{% block title %}Daily QHSE - ajout  {% endblock %}

{% block body %}
   
                <div class="row animate-box">
                    <div class="col-md-12 col-md-offset-2 text-center fh5co-heading">
                        <h2> Proposer un service </h2>
                        <hr class="text-danger ">
                        <h3 class="text-center text-bold "> Ajouter un service  </h3>
                        <div class="border border-info bg-success container">
                            {{ form_errors(service) }}
                            {{ form_start(service) }}
                                {{ form_row(service.titre, {'attr': {'class': 'form form-control text-center'}}) }}
                                {{ form_row(service.description, {'attr': {'class': 'form form-control text-center'}}) }}
                                {{ form_row(service.motscles, {'attr': {'class': 'form form-control text-center'}}) }}
                              
                                <button type="submit" class="btn form form-control btn-primary bg-success mt-5 btn-block  p-3"
                                 style="margin-top: 15px;"> Valider </button>
                            {{ form_end(service) }}
                        </div>
                    </div>
                </div>

            
           
{% endblock %}
